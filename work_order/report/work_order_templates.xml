<odoo>

    <template id="report_workorder_document">
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <style type="text/css">
            h2 {
				color:red;
				padding:0;
				margin:0;
				font-size:20;
			}

            .vcenter {
                display: inline-block;
                vertical-align: middle;
                float: none;
            }
        </style>
        <t t-call="web.internal_layout">
            <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
            <div class="page">
                <div class="row">
                    <table class="table table-condensed">
                        <tr>
                            <td width="210px"><img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" width="200px" height="150px"/></td>
                            <td style="vertical-align:middle"><h2 class="text-center">Surat Perintah Kerja</h2></td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-6">
                    <div class="row">
                        <strong>Tanggal :</strong>
                        <p t-field="o.date_order"/>
                    </div>
                    <div class="row">
                        <strong>No SPK :</strong>
                        <p t-field="o.name"/>
                    </div>
                </div>
                <div class="col-xs-6">
                    Kepada:
                    <p>
                    <strong><span t-field="o.partner_id.name"/></strong><br/>
                    <span t-field="o.partner_id.street"/>
                    </p>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-condensed table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th><strong>Description</strong></th>
                                    <th><strong>Taxes</strong></th>
                                    <th class="text-center"><strong>Date Req.</strong></th>
                                    <th class="text-right"><strong>Qty</strong></th>
                                    <th class="text-right"><strong>Unit Price</strong></th>
                                    <th class="text-right"><strong>Amount</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                        <tr t-foreach="o.order_line" t-as="line">
                            <td>1</td>
                            <td>
                                <span t-field="line.name"/>
                            </td>
                            <td>
                                <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                            </td>
                            <td class="text-center">
                                <span t-field="line.date_planned"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.product_qty"/>
                                <span t-field="line.product_uom.name" groups="product.group_uom"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_unit"/>
                            </td>
                            <td class="text-right">
                                <span t-field="line.price_subtotal"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <strong>Terbilang:</strong>
                        <span t-field="o.amount_to_text"/>
                    </div>
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr>
                                <td>Taxes</td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="o.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <table class="table table-condensed table-bordered">
                        <tr>
                            <td>
                               <strong>Notification</strong>
                                <p>
                                    SPK UPAH<br/>
                                    TAX 3%<br/>
                                    SYARAT PEMBAYARAN<br/>
                                    Tahap I   : Setelah menerima Surat Tugas dan APP<br/>
                                    Tahap II  : Pelaksanaan Finishing<br/>
                                    Taha[ III : Setelah Berita acara ATP ditandatangani<br/>
                                </p>
                            </td>
                        </tr>
                    </table>
                    </div>
                    <div class="col-xs-6">
                        <table class="table table-condensed table-bordered">
                        <tr>
                            <td>
                                <strong>
                                    Invoice dan Surat Jalan harap dikirim ke
                                    bagian "Account Payable" PT Prasetia
                                    Juvisk Sinergi
                                    dengan mencantumkan: "Perihal :
                                    TAGIHAN".
                                </strong>
                                <hr/>
                                <strong>Alamat Faktur Pajak :</strong>
                                <p>
                                    PT Prasetia Juvisk Sinergi, NPWP :
                                    82.391.097.1-075.000
                                    JL.ANTARA GD ARUNA LT. 3 NO. 47
                                    PASAR BARU SAWAH BESAR JAKARTA
                                    PUSAT DKI JAKARTA
                                </p>
                            </td>
                        </tr>
                    </table>
                    </div>
                </div>

                <p t-field="o.notes"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_workorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="work_order.report_workorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>